
<h1>Tasks</h1>
<ul class="task-list">
    {{#each tasks}}
    <li>

        {{#if this.hide}}
            <form action="/tasks/updatestatusHide" method="POST">
            <input type ="hidden" name="id" value={{this.id}}>
            <input type ="hidden" name="hide" value={{this.hide}}>
            <button type="submit">
                <i class="bi bi-eye-slash"></i></a>   
            </button>
            </form>
        {{else}} 
        
        {{#if this.done}}
        <a href="/tasks/edit/{{this.id}}" class="title done">{{this.title}}</a>  
        {{else}} 
        <a href="/tasks/edit/{{this.id}}"  class="title">{{this.title}}</a> 
        {{/if}}  
        
        <div class="actions">
            
            <form action="/tasks/updatestatus" method="POST">
            <input type ="hidden" name="id" value={{this.id}}>
            <input type ="hidden" name="done" value={{this.done}}>
            <button type="submit">
                <i class="bi bi-check2"></i>
            </button>
            </form>
            
            <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
            <form action="/tasks/remove" method="POST">
            <input type ="hidden" name="id" value={{this.id}}>
            <button type="submit">
                <i class ="bi bi-x-lg"></i>
                </button>
            </form>
            
            <form action="/tasks/updatestatusHide" method="POST">
            <input type ="hidden" name="id" value={{this.id}}>
            <input type ="hidden" name="hide" value={{this.hide}}>
            <button type="submit">
                <i class="bi bi-eye-slash"></i></a>   
            </button>
            </form>
            
            
        </div>
    </li>

    {{/if}}
    {{/each}}
</ul>
