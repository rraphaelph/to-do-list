<h1>Edit Task: {{task.title}}</h1>
<form action="/tasks/edit" method="POST">
<input type="hidden" name="id" value="{{task.id}}">
    <div class="form-control">
        <label for = "title">Title</label>
        <input type="text" name="title" placeholder="O que vc vai fazer?" value="{{task.title}}">
    </div>
    <div class="form-control">
        <label for = "title">Description</label>
        <textarea name="description" placeholder="Descreva a tarefa...">{{task.description}}</textarea>
    </div>
    <div class="form-control">
        <label for = "title"> Due Date</label>
        <input type="date" name="duedate"value="{{task.duedate}}">
    </div>
    <input type="submit" value="Editar">
</form>